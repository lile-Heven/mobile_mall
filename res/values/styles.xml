<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 动画效果 -->
	<style name="AnimationActivity">
	    <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
	    <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
	    <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
	    <item name="android:activityCloseExitAnimation">@anim/push_left_out</item>
	</style>
	<style name="ThemeActivity">
	    <item  name="android:background">#cc4455ff</item>
	    <item name="android:windowNoTitle">true</item>
	    <!-- 给定动画效果 -->
	    <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
	    
	</style>
	<style name="mThemeActivity" parent="AppBaseTheme">
	    <!--  <item name="android:windowNoTitle">true</item> -->
	    <!-- 给定动画效果 -->
	    <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
	    
	</style>

</resources>
