<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/notificaiton_bg2"
    android:orientation="horizontal" >

    <!-- 通知栏图片最大128*128	16*16 -->

    <ImageView
        android:id="@+id/notification_music_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
         />
    <ImageView
        android:id="@+id/notification_music_img2"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:visibility="invisible"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout 
            android:id="@+id/notification_music_title"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            
        <TextView
            android:id="@+id/notification_music_title_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />
        <TextView
            android:id="@+id/notification_music_title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:layout_below="@id/notification_music_title"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/notification_music_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/player_pre" />

            <ImageView
                android:id="@+id/notification_music_play_or_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/player_pause" />

            <ImageView
                android:id="@+id/notification_music_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/player_next" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>