<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v4.view.ViewPager 
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
    </android.support.v4.view.ViewPager>
    <ImageView 
        android:id="@+id/iv_viewpager_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout 
        android:id="@+id/ll_viewpager_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/iv_viewpager_bottom"
        android:layout_marginBottom="0dp"
        
        >
        <ImageView 
            android:id="@+id/iv_viewpager_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launcher_point_default"
            
            />
        <ImageView 
            android:id="@+id/iv_viewpager_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launcher_point_default"
            
            />
        <ImageView 
            android:id="@+id/iv_viewpager_point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launcher_point_default"
            
            />
    </LinearLayout>
    

</RelativeLayout>
